@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Category to List</h2>
            <hr />
        </div>
        <div class="form-group">
            <label for="CategoryName" class="form-label">Category Name</label>
            <input type="text" asp-for="Name" class="form-control" id="CategoryName" placeholder="Category" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="DisplayOrder" class="form-label mt-2">Display Order</label>
            <input type="number" asp-for="DisplayOrder" class="form-control" id="DisplayOrder" placeholder="Display Order" required>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-light">Back to List</a>
        </div>
     </div>

</form>